<!DOCTYPE html>
<html lang="en">

  <%- include('./partials/_head/_head') %>

<body>
  
  <%- include('./partials/_mainNav/_navBar') %>

  <header class="container">
    <h2>Recipe List</h2>
  </header>

  <main class="main">

    <div class="container">
      <% if (posts.length === 0 ) { %>
        <p>no recipes yet</p>
      <% } %> 
      
      <% recipes.forEach( recipe => { %>
        <article class="card">
          <!-- card header  -->
          <header class="card__header">
            
            <div class="card__header__img">
              <img src="<%= recipe.user.photo %>" alt="">  
            </div>

            <small>
              <a href="/users/<%= recipe.user._id %>"><%= recipe.user.name %></a> 
            </small>
          </header>

          <!-- card body -->
          <section class="card__body">
            <img src="<%= recipe.img %> " alt="">
          </section>

          <!-- card footer -->
          <section class="card__footer">
            
            <div class="card__footer__reactions">
              <div class="card__footer__icons">
                 <i class="fas fa-heart"></i>
                <i class="far fa-comment"></i>
                <i class="far fa-paper-plane"></i>
              </div>
            </div>
            
            <div class="card__footer__user--info">
              <p>liked by ... and others</p>
            </div>
            <div class="card__footer__user--info">
              <p><%= recipe.user.name %> <%= recipe.caption %></p>
            </div>

            <section class="card__add__comment">
              <form id="comment-form" action="">
                <div class="inline-fields">
                  <input class="add-comment" type="text" placeholder="Add Comment...">

                  <input id="submit-comment" class="submit" type="submit" value="post" >
                </div>
              </form>
            </section>

          </section>

        </article>
      <% }) %>
  
    </div>
     
  </main>

</body>
</html>
